<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    
    <!-- Foreground service permissions for live video streaming -->
    <!-- Using Agora voice-sdk (not full-sdk) to avoid MEDIA_PROJECTION permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    
    <!-- CRITICAL: Explicitly remove MEDIA_PROJECTION permission added by Agora SDK -->
    <!-- We do NOT use screen recording/projection - only camera-based live streaming -->
    <uses-permission 
        android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" 
        tools:node="remove" />
    
    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:allowBackup="false"
      android:theme="@style/AppTheme"
      android:supportsRtl="true"
      tools:replace="android:allowBackup">
      <uses-library android:name="org.webrtc" android:required="false" />
      <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        <intent-filter android:label="payment-success">
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="ileafu" android:host="payment-success" />
        </intent-filter>
        <intent-filter android:label="payment-cancel">
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="ileafu" android:host="payment-cancel" />
        </intent-filter>
      </activity>
      
      <!-- CRITICAL: Agora SDK includes MediaProjection components even in voice-sdk -->
      <!-- We MUST explicitly remove them as we don't use screen sharing -->
      <!-- We only use camera-based live video streaming, NOT screen recording -->
      <service
        android:name="io.agora.rtc2.extensions.MediaProjectionMgr$LocalScreenSharingService"
        tools:node="remove" />
      <activity
        android:name="io.agora.rtc2.extensions.MediaProjectionMgr$LocalScreenCaptureAssistantActivity"
        tools:node="remove" />
      
      <!-- Foreground service type declarations for Android 14+ compliance -->
      <!-- These services are used for live video streaming functionality -->
      <!-- Camera foreground service: Used when sellers broadcast live video streams -->
      <service
        android:name="com.ileafu.services.CameraForegroundService"
        android:foregroundServiceType="camera"
        android:exported="false"
        android:enabled="true" />
      
      <!-- Media playback foreground service: Used when buyers watch live video streams -->
      <service
        android:name="com.ileafu.services.MediaPlaybackForegroundService"
        android:foregroundServiceType="mediaPlayback"
        android:exported="false"
        android:enabled="true" />
    </application>
</manifest>